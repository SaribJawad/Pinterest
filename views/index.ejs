<% include ./partials/header.ejs %>

<div
  class="w-full h-screen flex items-center justify-center bg-[url('https://images.unsplash.com/photo-1671955100733-75a786defe49?q=80&w=2071&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-cover bg-center"
>
  <div
    class="min-w-[500px] w-[25vw] h-[60vh] px-20 py-10 rounded-[30px] bg-white flex flex-col justify-center"
  >
    <h1
      class="mb-10 text-3xl text-center font-semibold text-zinc-700 tracking-tight capitalize leading-none"
    >
      Welcome to pinterest
    </h1>
    <form action="/login" method="post">
      <input
        class="block w-full px-3 py-2 mt-2 border-2 rounded-md"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="block w-full px-3 py-2 mt-2 border-2 rounded-md"
        type="password"
        name="password"
        placeholder="password"
      />
      <a class="mt-4 font-semibold text-xs text-zinc-500 block" href="#"
        >Forgot password?</a
      >
      <input
        class="block w-full px-3 py-2 bg-red-600 text-white rounded-full mt-5 border-2 rounded-full cursor-pointer"
        type="submit"
        value="Login"
      />
      <p
        class="text-xs font-semibold text-zinc-500 mt-7 mx-auto text-center w-3/4"
      >
        By continuing, you agree to Pinterest's Terms of Service and acknowledge
        that you've read our Privacy Policy. Notice at collection.
      </p>
    </form>
    <a
      class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center"
      href="/register"
      >Dont have an account?</a
    >
  </div>
</div>

<% include ./partials/footer.ejs %>
